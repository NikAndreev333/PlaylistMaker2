<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ImageButton
        android:id="@+id/backButtonPlayerActivity"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/back"
        android:backgroundTint="?attr/colorPrimary"
        app:iconSize="40dp"
        app:tint = "?attr/colorOnPrimary"
        android:gravity="center"
        android:contentDescription="null"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/trackPoster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/placeholder"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintTop_toBottomOf="@id/backButtonPlayerActivity"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/trackAlbumName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintTop_toBottomOf="@id/trackPoster"

        android:layout_marginTop="12dp"
        tools:text="Album" />
    <TextView
        android:id="@+id/artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="26dp"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintTop_toBottomOf="@id/trackAlbumName"
        android:layout_marginTop="12dp"
        tools:text="artist" />
<ImageButton
    android:id="@+id/addToPlaylist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/left_border"
    android:src="@drawable/add_to_playlist"
    app:layout_constraintTop_toTopOf="@id/playButton"
    app:layout_constraintBottom_toBottomOf="@id/playButton"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    android:backgroundTint="?attr/colorPrimary"/>

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        app:layout_constraintStart_toEndOf="@id/addToPlaylist"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        app:layout_constraintEnd_toStartOf="@id/likeButton"
        android:backgroundTint="?attr/colorPrimary"/>

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like"
        app:layout_constraintTop_toTopOf="@id/playButton"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        android:backgroundTint="?attr/colorPrimary"
        />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/playButton"
        app:layout_constraintEnd_toEndOf="@id/playButton"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        android:layout_marginTop="5dp"
        android:text="0:30"/>

    <TextView
        android:id="@+id/timeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintBottom_toTopOf="@id/album"
        android:textColor="@color/YP_TextGray"
        android:textSize="13sp"
        tools:text="time"/>
    <TextView
        android:id="@+id/trackTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintBottom_toTopOf="@id/trackAlbum"
        android:textColor="?attr/colorSecondary"
        android:textSize="13sp"
        tools:text="3:00"/>
    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toEndOf="@id/left_border"
        app:layout_constraintBottom_toTopOf="@id/year"
        android:textColor="@color/YP_TextGray"
        android:textSize="13sp"
        tools:text="album"/>

    <TextView
        android:id="@+id/trackAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintBottom_toTopOf="@id/trackYear"
        android:textColor="?attr/colorSecondary"
        android:textSize="13sp"
        tools:text="trackAlbum"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintBottom_toTopOf="@id/genre"
        android:textColor="@color/YP_TextGray"
        android:textSize="13sp"
        tools:text="year"/>

    <TextView
        android:id="@+id/trackYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintBottom_toTopOf="@id/trackGenre"
        android:textColor="?attr/colorSecondary"
        android:textSize="13sp"
        tools:text="trackYear"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintBottom_toTopOf="@id/country"
        android:textColor="@color/YP_TextGray"
        android:textSize="13sp"
        tools:text="genre"/>
    <TextView
        android:id="@+id/trackGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintBottom_toTopOf="@id/trackCountry"
        android:textColor="?attr/colorSecondary"
        android:textSize="13sp"
        tools:text="trackGenre"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/left_border"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/YP_TextGray"
        android:textSize="13sp"
        tools:text="country"/>

    <TextView
        android:id="@+id/trackCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toStartOf="@id/right_border"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="?attr/colorSecondary"
        android:textSize="13sp"
        tools:text="trackCountry"/>
</androidx.constraintlayout.widget.ConstraintLayout>